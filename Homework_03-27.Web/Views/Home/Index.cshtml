@using Homework_03_27.Data
@using Homework_03_27.Web.Models
@model PersonViewModel

<div class="container">
    <main role="main" class="pb-3">
        <div class="row">
            <div class="col-md-12">
                <a href="/home/add" class="btn btn-outline-dark">Add Person</a>
                <table class="table table-hover table-borderless mt-4">
                    <tr>
                        <th>Id</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Age</th>
                    </tr>
                    @foreach(Person p in Model.People)
                    {
                        <tr>
                            <td>@p.Id</td>
                            <td>@p.FirstName</td>
                            <td>@p.LastName</td>
                            <td>@p.Age</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </main>
</div>